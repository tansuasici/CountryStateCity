{
  "name": "@tansuasici/country-state-city",
  "version": "2.0.6",
  "description": "A lightweight JavaScript library for accessing country, state, and city data worldwide with support for JSON, CSV, XML, and YAML formats",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "files": [
    "dist",
    "data"
  ],
  "scripts": {
    "build": "npm run build:cjs && npm run build:esm && npm run build:types",
    "build:cjs": "esbuild src/index.ts --bundle --platform=node --format=cjs --outfile=dist/index.js --external:js-yaml --external:xml-js",
    "build:esm": "esbuild src/index.ts --bundle --platform=node --format=esm --outfile=dist/index.mjs --external:js-yaml --external:xml-js",
    "build:types": "tsc --emitDeclarationOnly --declaration --declarationMap",
    "test": "node test.js",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "country",
    "state",
    "city",
    "location",
    "geography",
    "json",
    "csv",
    "xml",
    "yaml",
    "data",
    "world",
    "countries",
    "states",
    "cities",
    "iso",
    "timezone"
  ],
  "author": "Tansu Asici",
  "license": "MIT",
  "homepage": "https://countrystatecity.xyz",
  "repository": {
    "type": "git",
    "url": "https://github.com/tansuasici/countrystatecity"
  },
  "devDependencies": {
    "esbuild": "^0.19.11",
    "typescript": "^5.3.3",
    "@types/node": "^20.10.6",
    "@types/js-yaml": "^4.0.9"
  },
  "dependencies": {
    "js-yaml": "^4.1.0",
    "xml-js": "^1.6.11"
  }
}
